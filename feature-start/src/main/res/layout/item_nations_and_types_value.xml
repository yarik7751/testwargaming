<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/itemNationsAndTypesValuesIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/start_default_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="4:3"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".15"/>

    <TextView
        android:id="@+id/itemNationsAndTypesValuesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/title"
        android:textSize="@dimen/description_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toEndOf="@+id/itemNationsAndTypesValuesIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title" />
</androidx.constraintlayout.widget.ConstraintLayout>